{
  "extends": "@bn-digital/typescript-config/strapi-server.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "strictNullChecks": false,
    "types": ["@bn-digital/strapi-types"]
  },
  "include": ["./", "./src/**/*.json"],
  "exclude": [
    "node_modules/",
    "build/",
    "public",
    "dist/",
    ".cache/",
    ".tmp/",
    "src/admin/",
    "**/*.test.ts",
    "src/plugins/**"
  ]
}
